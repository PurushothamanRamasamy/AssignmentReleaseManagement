@model ReleaseManagementSystem.Models.Login

@{
    Layout = "~/Views/Shared/_loginLayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class=" container-lg  text-center"style="padding-top:5px;padding-bottom:5px;opacity:0.8">
        <center >
            
        </center>
    </div>
    <div class="row " style="padding-top:20px">
        <div class="col-4"></div>
        <div class="col-4  Container" style="        padding-top: 50px;
        padding-top: 50px;
        padding-bottom: 50px;
        padding-left: 10px;
        padding-right: 10px;
        opacity: 1;
        border-radius: 10px;
        background-color: #5089ff;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;">
            <center>

                <h4>Login</h4>
                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group ">
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = " text-light " })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control " ,@style = "color:white" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label",@style = "color:white" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control ",@style="background-color:white" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Login" class="btn btn-outline-light" />
                        </div>
                        <div class="text-danger">
                            @ViewBag.LoginMesssage
                        </div>

                    </div>
                </div>
            </center>
        </div>
        <div class="col-4"></div>
        </div>
            }


